---
import '../css/inner/inner.css'
import '../css/top/style.css'
import '../css/root/root.css'
---

<footer class="footer" id="footer">
    <div class="inner inner--footer">
        <p>
            <small class="copy">&copy; 2023 Tatsuya Aihara</small>
        </p>
        <p class="footer__page-top" id="js-page-top">
            page top
        </p>
    </div>
</footer>

<style lang="scss">
    .copy{
        font-size: var(--font-size-xxs);
    }
    
    .footer{
        width: 100%;
        font-family: 'Noto Sans JP', sans-serif;
        color: var(--color-white);
        background-color: var(--color-bg-black);

        &__page-top{
            position: absolute;
            top: 50%;
            right: 4vw;
            transform: translateY(-50%);
            font-size: var(--font-size-xxs);
            cursor: pointer;
        }
    }
</style>

<script>
    const page_top = document.getElementById('js-page-top')
    page_top.addEventListener('click', ()=>{
        window.scroll({
            top: 0, 
            behavior: "smooth"
        })
    })
</script>